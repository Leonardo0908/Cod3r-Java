package DesafioPC;

import java.util.Scanner;

public class Pintura {
	public static void main(String[] args) {
		
		float[] parede = new float[4];
		float[] numero = new float[1];
		
		Scanner  leia = new Scanner(System.in);
		
		for(int i = 1; i <= 4; i++) {
			System.out.println("Digite a largura da parede "+i);
			numero[1] = leia.nextFloat();
			System.out.println("Digite a altura da parede "+i );
			numero[0] = leia.nextFloat();
			
			parede[i] = numero[0] * numero[1];
		}
		
		for(int i = 0; i < 4; i++) {
			System.out.println(parede[i]);
		}
	}
}
