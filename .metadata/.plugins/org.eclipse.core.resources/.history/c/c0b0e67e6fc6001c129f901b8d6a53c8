package DesafioPC;

import java.util.Scanner;

public class Pintura {
	public static void main(String[] args) {
		
		float[] parede = new float[4];
		float[] numero = new float[4];
		
		Scanner  leia = new Scanner(System.in);
		
		for(int i = 0; i < 4; i++) {
			System.out.println("Digite a largura da parede "+i);
			numero[i] = leia.nextFloat();
			System.out.println("Digite a altura da parede  "+i+1);
			numero[i+1] = leia.nextFloat();
			
			parede[i] = numero[i] * numero[i];
		}
	}
}
